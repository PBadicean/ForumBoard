.question-wrapper
  h3 Заголовок #{question.title}
  p Тело #{question.body}
  .question_rating
    p Рейтинг вопроса #{question.rating}
  p = render 'questions/partials/vote', question: question

  - if current_user&.author_of(question)
    = link_to "Удалить",
      question,
      method: :delete

    = link_to 'Редактировать', '', class: 'edit-question-link'
    = render 'questions/partials/form', question: question, ajax: true
  .question_attachments
    = render  'questions/partials/attachments', question: question
