-if answer.persisted?
  .answer-wrapper
    p= answer.body

    - if current_user&.author_of(answer)
      p= link_to "Удалить ответ",
        answer_path(answer),
        method: :delete,
        data:  { confirm: 'Вы уверены?' }

      p= link_to 'Редактировать', '', class: 'edit-answer-link', data: { answer_id: answer.id }
      = form_for answer, remote: true, html: { id: "edit-answer-#{answer.id}" } do |f|
        = f.label :body, "Ответ"
        = f.text_area :body
        = f.submit 'Сохранить'
