$('#answer-wrapper').val('');
<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').html('<%= j message %>');
    <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('.answers').append("<%= j "#{render @answer, question: @question }" %>");
    $('.new-answer').html("<%= j "#{render 'form', question: @answer.question, answer: Answer.new}" %>");
  <% else %>
    $('.answers').append('<%= j render @answer, question: @question %>');
    $('.new-answer').html('<%= j render 'form', question: @answer.question, answer: Answer.new %>');
  <% end %>
<% end %>
