$('#answer_body').val('');
<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').html('<%= j message %>');
    <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('.answers').append("<%= j "#{render @answer, question: @answer.question }" %>");
    $('.new-answer').html("<%= j "#{render 'form', path: [@answer.question, Answer.new] }" %>");
  <% else %>
    $('.answers').append('<%= j render @answer, question: @answer.question %>');
    $('.new_answer').html('<%= j render 'form', path: [@answer.question, Answer.new] %>');
  <% end %>
<% end %>
